@@ -37,6 +37,18 @@
   ARCH_DATA_MODEL ?= 32
 endif
 
+# zero
+ifdef ICEDTEA_ZERO_BUILD
+  ARCH_DATA_MODEL  = $(ZERO_BITSPERWORD)
+  ifeq ($(ARCH_DATA_MODEL), 64)
+    MAKE_ARGS      += LP64=1
+  endif
+  PLATFORM         = linux-zero
+  VM_PLATFORM      = linux_zero
+  HS_ARCH          = zero
+  ARCH             = zero
+endif
+
 # ia64
